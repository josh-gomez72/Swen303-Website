extends ../node_modules/jade-bootstrap/_bootstrap

append styles
  // Custom styles for this template
  link(href='stylesheets/style.css', rel='stylesheet')

  block body
  +navbar-fixed("Colenso Project","navbar","inverse")
      +nav_item("./") Home
        +icon("home")
      +nav_item("browse") Browse
        +icon("th")
      +nav_item("search", "active") Search
        +icon("search")
      +nav_item("upload") Upload/Edit
        +icon("upload")
  .container
    br
    br
    h1 Colenso Project
    .container
      form(name = "stringSearch", action="/searchResult", method="get")
        +input('text', 'stringValue', 'Search', 'Search String', 'stringValue')
        +submit("Submit")
      form(name = "querySearch", action="/searchResult", method="get")
        +input('text', 'queryValue', 'Search', 'Search Query', 'queryValue')
        +submit("Submit")


    //
      +tab-list(["String", "Query"], 0)
        +tab("String", "active")
          form(name = "stringSearch", action="/searchResult", method="get")
            +input('text', 'stringValue', 'Search', 'Search String', 'stringValue')
            +submit("Submit")
        +tab("XQuery")
          form(name = "querySearch", action="/searchResult", method="get")
            +input('text', 'queryValue', 'Search', 'Search Query', 'queryValue')
            +submit("Submit")
