extends ../node_modules/jade-bootstrap/_bootstrap

append styles
  // Custom styles for this template
  link(href='stylesheets/style.css', rel='stylesheet')

  block body
  +navbar-fixed()
    a.navbar-brand(href='http://www.williamcolenso.co.nz/') Colenso Project
      +nav_item("./") Home
        +icon("home")
      +nav_item("browse") Browse
        +icon("th")
      +nav_item("search") Search
        +icon("search")
      +nav_item("upload") Upload/Edit
        +icon("upload")
  .container
    br
    br
    h2 Search Results containing !{value}
    .container
      each val in place
        li: a(href = "/documentView?document=/"+val)
           !{val}
           +a-btn("/download?document=/"+val) Download
